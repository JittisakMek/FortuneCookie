<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.egci428.fortunecookie.NewFortuneCookie"
    android:contextClickable="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Cookies"
        android:id="@+id/title2"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#207bfb"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="#ffffff"
        android:layout_below="@+id/title2"
        android:src="@drawable/closed_cookie"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:gravity="center"
        android:background="#d7eff7"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultTxt"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:gravity="center|start"
        android:background="#ffffff"
        android:textColor="#207bfb" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateBox"
        android:gravity="center|right"
        android:background="#ede9e9"
        android:layout_below="@+id/resultTxt"
        android:layout_alignEnd="@+id/resultTxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHAKE"
        android:id="@+id/shakeBtn"
        android:background = "@drawable/roundbutton"
        android:textSize="18dp"
        android:layout_marginTop="54dp"
        android:onClick="OnClickButtonListener"
        android:layout_below="@+id/dateBox"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
